<%
  questions = QuickQuestion.all
  quickAnswers = QuickAnswer.all

  questions.each do |x|
    
    answered = false
    
    quickAnswers.each do |a|
      if x.id == a.quick_question_id
        answered = true
      end
    end

    if !answered %>
      <%= link_to x.question, quick_question_path(x.id) %> <br />
  <% 
    end
  end %>