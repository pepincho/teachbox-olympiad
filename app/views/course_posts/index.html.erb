<h1>Listing course_posts</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Course</th>
    <th>Title</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @course_posts.each do |course_post| %>
  <tr>
    <td><%= course_post.content %></td>
    <td><%= course_post.course_id %></td>
    <td><%= course_post.title %></td>
    <td><%= course_post.user_id %></td>
    <td><%= link_to 'Show', course_post %></td>
    <td><%= link_to 'Edit', edit_course_post_path(course_post) %></td>
    <td><%= link_to 'Destroy', course_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

